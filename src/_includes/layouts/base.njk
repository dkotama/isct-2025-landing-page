{# src/_includes/layouts/base.njk #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ title }}</title>
    {% if description %}
    <meta name="description" content="{{ description }}">
    {% endif %}
    {% if keywords %}
    <meta name="keywords" content="{{ keywords }}">
    {% endif %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Meta Description -->
    <meta name="description"
        content="The International Symposium on Consumer Technologies (ISCT) 2025 is the premier global event organized by the IEEE Consumer Technology Society (CTSoc), focusing on groundbreaking advances in consumer technology with an emphasis on sustainability and environmental impact. Join us in Bali, Indonesia from September 16-18, 2025.">

    <!-- Keywords -->
    <meta name="keywords"
        content="ISCT 2025, IEEE, Consumer Technology, Symposium, Bali, Indonesia, Sustainable Technology, Consumer Electronics, IoT, Artificial Intelligence, Augmented Reality, Virtual Reality, Wearable Devices, Smart Home Systems">

    {% block meta_tags %}{% endblock %}
    
    <!-- Stylesheets -->
    <link href="{{ '/assets/css/font-face.css' | url }}" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css" integrity="sha512-dPXYcDub/aeb08c63jRq/k6GaKccl256JQy/AnOq7CAnEZ9FzSL9wSbcZkMp4R26vBsMLFYH4kQ67/bbV8XaCQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="{{ '/assets/css/hs-mega-menu.min.css' | url }}">
    <link rel="stylesheet" href="{{ '/assets/css/theme.min.css' | url }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha512-SfTiTlX6kk+qitfevl/7LibUOeJWlt9rbyDn92a1DqWOw9vWG2MFoays0sgObmWazO5BQPiFucnnEAjpAB+/Sw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    {% block head %}{% endblock %}
</head>
<body>

    {% include "partials/header.njk" %}
    
    <main id="content" role="main">
        {% block content %}{% endblock %}
    </main>
    
    {% include "partials/footer.njk" %}

    <!-- Scripts -->
    <script src="{{ '/assets/js/bootstrap.bundle.min.js' | url }}"></script>
    <!-- Other scripts -->
    {% block scripts %}{% endblock %}
</body>
</html>
